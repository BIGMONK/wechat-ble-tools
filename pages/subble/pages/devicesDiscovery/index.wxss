/* pages/subble/devicesDiscovery/index.wxss */

page {
  color: #333;
  background-color: white;
}

.devices_summary {
  padding: 10px;
  font-size: 16px;
}

.device_list {
  height: 300px;
  margin: 20rpx 00rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  width: auto;
  background: gold;
}

.device_item {
  border-bottom: 1px solid #eee;
  padding: 10px;
  color: #666;
}

.device_item_hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.connected_info {
  width: 100%;
  background-color: #f0f0f0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}

.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}

.connectedBles {
  margin: 10rpx 0rpx;
  padding: 10rpx;
  border: 1px solid red;  
}

.item {
  font-size: 12px;
  margin: 5rpx;
  border: 1px solid green;
  padding-bottom: 5rpx;
}
.item2 {
  font-size: 12px;
  margin: 5rpx;
  border: 1px solid blue;
  padding-bottom: 5rpx;
}
